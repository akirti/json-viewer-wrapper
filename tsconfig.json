{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    //"noImplicitAny": true,
    //"module": "es6",
    //"target": "es5",
    //"allowJs": true,

    "lib": ["es5", "es6", "es7","dom"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
        "@modules/*": ["src/modules/*"],
        "*": ["node_modules/*"]
    },   
  },
  "files": ["src/index.ts"]
}
